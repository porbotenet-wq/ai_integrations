# .env.example â€” Required environment variables for gpr_bot
# Copy to .env and fill in values

BOT_TOKEN=your_telegram_bot_token
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname
DATABASE_URL_SYNC=postgresql://user:password@host:5432/dbname
REDIS_URL=redis://localhost:6379/0
API_SECRET_KEY=your_secret_key

# MinIO / S3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=gpr-documents

# AI Provider (kimi | anthropic | openai)
AI_PROVIDER=kimi
AI_API_KEY=your_kimi_or_openai_api_key
AI_MODEL=moonshot-v1-32k
AI_BASE_URL=https://api.moonshot.ai/v1

# Legacy (still supported)
# ANTHROPIC_API_KEY=sk-ant-...
# CLAUDE_MODEL=claude-sonnet-4-20250514

# Optional
WEBAPP_URL=https://your-miniapp-url.com
ADMIN_TELEGRAM_IDS=123456789
CHECK_DEADLINES_INTERVAL=3600
DIGEST_HOUR=9
